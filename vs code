    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const editor = document.getElementById('editor');
            const fileTabs = document.querySelectorAll('.flex.items-center.px-4.py-2');
            fileTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    const fileName = this.querySelector('span').textContent;
                    alert(`You clicked on the ${fileName} tab`);
                });
            });
            editor.addEventListener('dblclick', function() {
                alert('You can edit code in this area in a real VS Code implementation');
            });
            document.querySelector('.fa-terminal').addEventListener('click', function() {
                alert('Terminal would open here in a real implementation');
            });
        });
    </script>
